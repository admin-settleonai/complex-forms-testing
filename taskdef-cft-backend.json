{
  "family": "cft-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::REPLACE_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::REPLACE_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "cft-backend",
      "image": "REPLACE_IMAGE_URI",
      "portMappings": [
        { "containerPort": 3100, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3100" },
        { "name": "RATE_LIMIT_ENABLED", "value": "false" }
      ],
      "secrets": [
        { "name": "JWT_SECRET", "valueFrom": "REPLACE_SECRET_ARN" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "us-west-2",
          "awslogs-group": "/ecs/cft-backend",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true
    }
  ]
}





















